<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayCalculatorActivity">

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="25dp"
        android:text="Display arithmetic operation here"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:text="Welcome to my calculator!"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cat_study"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        app:layout_constraintStart_toEndOf="@id/btn0"
        android:text="1"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        app:layout_constraintStart_toEndOf="@id/btn1"
        android:text="2"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        app:layout_constraintStart_toEndOf="@id/btn2"
        android:text="3"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        app:layout_constraintStart_toEndOf="@id/btn3"
        android:text="4"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-10dp"
        android:text="5"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/btn5"
        android:layout_marginTop="-10dp"
        android:text="6"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintStart_toEndOf="@id/btn6"
        android:layout_marginTop="-10dp"
        android:text="7"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn7"
        android:layout_marginTop="-10dp"
        android:text="8"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/btn8"
        android:layout_marginTop="-10dp"
        android:text="9"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-10dp"
        android:text="+"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btnSub"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btnAdd"
        android:layout_marginTop="-10dp"
        android:text="-"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btnMult"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/btnSub"
        android:layout_marginTop="-10dp"
        android:text="*"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/btnDiv"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@id/btnMult"
        android:layout_marginTop="-10dp"
        android:text="/"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/btnResult"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btnDiv"
        android:layout_marginTop="-10dp"
        android:text="="
        android:textSize="40dp"
        />

    <Button
        android:id="@+id/btnCleanOperation"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintTop_toBottomOf="@id/btnMult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-10dp"
        android:text="Clean"
        android:textSize="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>